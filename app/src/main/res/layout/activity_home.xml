<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/blueGray050"
  android:focusableInTouchMode="true"
  tools:context=".presentation.home.Home">

  <include layout="@layout/box_new_rush"/>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/task_recyclerview"
    android:layout_marginStart="52dp"
    android:clipToPadding="false"
    android:paddingBottom="84dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
  <LinearLayout
    android:background="@drawable/ripple_bar"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_width="48dp"
    android:layout_height="match_parent">
    <ProgressBar
      android:id="@+id/progressbar"
      android:layout_gravity="center"
      android:indeterminateTint="@color/blueGray100"
      android:layout_width="32dp"
      android:layout_height="48dp"
      android:visibility="gone"/>
    <ImageView
      android:layout_gravity="center"
      android:layout_width="32dp"
      android:layout_height="48dp"
      android:src="@drawable/ic_haste"
      android:tint="@color/blueGray050"/>
  </LinearLayout>

</RelativeLayout>
